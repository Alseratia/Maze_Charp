            <Border BorderBrush="White" BorderThickness="2" Background="Gray" Height="501" Width="501">
                <webUi:MazeControl Height="500" Width="500" />
            </Border>
        </TabItem>
        <TabItem Header="Пещеры">
            <!-- Контент для пещер -->
            <!-- Здесь может быть другой пользовательский контроль или разметка -->
        </TabItem>
    </TabControl>
</Window>
